<Page x:Class="CheckListCreator.ChecklistEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Редактор чек-листа">

    <Grid Margin="10">
        <Grid.Resources>
            <Style x:Key="TaskItemStyle" TargetType="Border">
                <Setter Property="BorderBrush" Value="LightGray"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Margin" Value="2"/>
                <Setter Property="Padding" Value="5"/>
                <Setter Property="CornerRadius" Value="3"/>
                <Setter Property="Background" Value="White"/>
            </Style>

            <Style x:Key="SubTaskItemStyle" TargetType="Border">
                <Setter Property="BorderBrush" Value="LightBlue"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Margin" Value="2,1,2,1"/>
                <Setter Property="Padding" Value="8,3"/>
                <Setter Property="CornerRadius" Value="2"/>
                <Setter Property="Background" Value="#F0F8FF"/>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и описание -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="BackButton" Content="← Назад" Click="BackButton_Click" 
                    Margin="0,0,10,0" Padding="5"/>
            <TextBox x:Name="ChecklistName" FontSize="16" FontWeight="Bold" 
                     Width="300" TextChanged="ChecklistName_TextChanged"/>
            <TextBox x:Name="ChecklistDescription" Margin="10,0,0,0" 
                     Width="400" TextChanged="ChecklistDescription_TextChanged"
                     ToolTip="Описание чек-листа"/>
        </StackPanel>

        <!-- Прогресс -->
        <TextBlock Grid.Row="1" x:Name="ProgressText" FontSize="12" 
                   Foreground="DarkGreen" Margin="0,0,0,10"/>

        <!-- Список задач -->
        <GroupBox Grid.Row="2" Header="Задачи" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListBox x:Name="TasksList" Grid.Row="0" 
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         ScrollViewer.CanContentScroll="False"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <!-- Основная задача -->
                                <Border Style="{StaticResource TaskItemStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox Grid.Column="0" IsChecked="{Binding CompleteFlag, Mode=OneWay}"
                                                  VerticalAlignment="Center" Margin="0,0,10,0"
                                                  Checked="TaskCheckBox_Changed" Unchecked="TaskCheckBox_Changed"/>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Description}" FontStyle="Italic" 
                                                       Foreground="Gray" TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding SubTasks.Count, StringFormat='Подзадач: {0}', Mode=OneWay}" 
                                                       FontSize="10" Foreground="DarkBlue" Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <Button Grid.Column="2" Content="➕" Background="LightGreen" 
                                                Padding="5,2" Margin="5,0,0,0" ToolTip="Добавить подзадачу"
                                                Click="AddSubTask_Click" Tag="{Binding}"/>

                                        <Button Grid.Column="3" Content="✕" Background="LightCoral" 
                                                Padding="5,2" Margin="5,0,0,0" ToolTip="Удалить задачу"
                                                Click="DeleteTask_Click" Tag="{Binding}"/>
                                    </Grid>
                                </Border>

                                <!-- Подзадачи -->
                                <ItemsControl ItemsSource="{Binding SubTasks}" Margin="20,5,0,5">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource SubTaskItemStyle}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <CheckBox Grid.Column="0" IsChecked="{Binding CompleteFlag, Mode=OneWay}"
                                                              VerticalAlignment="Center" Margin="0,0,10,0"
                                                              Checked="SubTaskCheckBox_Changed" Unchecked="SubTaskCheckBox_Changed"/>

                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding Name}" FontSize="11"/>
                                                        <TextBlock Text="{Binding Description}" FontStyle="Italic" 
                                                                   Foreground="Gray" TextWrapping="Wrap" FontSize="10"/>
                                                    </StackPanel>

                                                    <Button Grid.Column="2" Content="✕" Background="LightCoral" 
                                                            Padding="3,1" Margin="5,0,0,0" FontSize="10"
                                                            Click="DeleteSubTask_Click" Tag="{Binding}"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Панель для добавления подзадачи -->
                                <StackPanel Orientation="Horizontal" Margin="25,5,0,10">
                                    <TextBox x:Name="NewSubTaskName" Width="150" Margin="0,0,5,0" 
                                             Text="Новая подзадача" FontSize="10"
                                             ToolTip="Название подзадачи"/>
                                    <TextBox x:Name="NewSubTaskDescription" Width="200" Margin="0,0,5,0"
                                             Text="Описание" FontSize="10"
                                             ToolTip="Описание подзадачи"/>
                                    <Button Content="Добавить подзадачу" Background="LightBlue" 
                                            Padding="5,2" FontSize="10"
                                            Click="AddSubTaskConfirm_Click" Tag="{Binding}"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Добавление новой задачи -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBox x:Name="NewTaskName" Width="200" Margin="0,0,10,0" 
                             Text="Новая задача" ToolTip="Название задачи"/>
                    <TextBox x:Name="NewTaskDescription" Width="300" Margin="0,0,10,0"
                             Text="Описание задачи" ToolTip="Описание задачи"/>
                    <Button x:Name="AddTaskButton" Content="Добавить задачу" 
                            Click="AddTaskButton_Click" Padding="10,5"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Click="SaveButton_Click" Padding="10,5" 
                    Background="LightGreen" Margin="0,0,10,0"/>
            <Button Content="Удалить чек-лист" Click="DeleteChecklist_Click" 
                    Padding="10,5" Background="LightCoral"/>
        </StackPanel>
    </Grid>
</Page>